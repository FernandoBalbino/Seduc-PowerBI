generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  password  String
  createdAt DateTime     @default(now()) @map("created_at")
  sectors   UserSector[]

  @@map("users")
}

model UserSector {
  id     String @id @default(uuid())
  userId String @map("user_id")
  sector String
  user   User   @relation(fields: [userId], references: [id])

  @@map("user_sectors")
}

model Dashboard {
  id        String   @id @default(uuid())
  name      String
  url       String
  sector    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("dashboards")
}
