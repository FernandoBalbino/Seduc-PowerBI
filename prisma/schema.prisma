generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // O id deve ser o mesmo do auth.users.id (UUID) â€” sem default aqui
  id        String       @id @db.Uuid
  email     String       @unique
  nome      String
  createdAt DateTime     @default(now()) @map("created_at")
  sectors   UserSector[]

  @@map("users")
}

model UserSector {
  id     String @id @default(uuid()) @db.Uuid
  userId String @map("user_id") @db.Uuid
  sector String
  user   User   @relation(fields: [userId], references: [id])

  @@map("user_sectors")
}

model Dashboard {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  url       String
  sector    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("dashboards")
}
